		VALUES(	CONCAT('IN_CODE', (SELECT NVL(MAX(TO_NUMBER(SUBSTR(IN_CODE, 8)))+1 , 1) FROM ST_IN)),
				'COMPANY1',
				#{customerCode, jdbcType=VARCHAR},
				1,
				#{inDate, jdbcType=VARCHAR},
				sysdate,
				#{regUser, jdbcType=VARCHAR},
				'저장',
